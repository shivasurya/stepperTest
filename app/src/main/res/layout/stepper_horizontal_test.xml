<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stepperbody"
        android:elevation="5sp"
        android:background="#F6F6F6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72sp"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="24sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="24sp"
                    android:layout_marginStart="24sp"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:background="@drawable/greyish"
                    android:text="1"
                    android:id="@+id/first"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:ellipsize="end"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="20sp"
                    android:maxLines="1"
                    android:id="@+id/firsttext"
                    android:layout_marginEnd="8sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginStart="8sp"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="0sp"
                android:layout_height="2sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e7e7e7"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:background="@drawable/greyish"
                android:text="2"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="8sp"
                android:layout_marginStart="8sp"
                android:id="@+id/second"
                android:gravity="center"
                android:textColor="@android:color/white"
              />
            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                android:maxLines="1"
                android:layout_marginRight="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginLeft="8sp"
                android:layout_marginStart="8sp"
                android:textColor="#707070"
                android:textSize="12sp"
                android:id="@+id/secondtext"
                />
            </LinearLayout>
            <View
                android:layout_width="0sp"
                android:layout_height="2sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e7e7e7"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/ll"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="24sp"
                android:layout_marginBottom="20sp"
                android:layout_width="24sp"
                android:layout_marginStart="8sp"
                android:layout_height="24sp"
                android:layout_marginLeft="8sp"
                android:background="@drawable/greyish"
                android:text="3"
                android:id="@+id/third"
                android:gravity="center"
                android:layout_marginRight="8sp"
                android:layout_marginEnd="8sp"
                android:textColor="@android:color/white"
                />
            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Deliver"
                android:ellipsize="end"
                android:id="@+id/thirdtext"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                android:maxLines="1"
                android:layout_marginRight="8sp"
                android:layout_marginEnd="8sp"
                android:textColor="#707070"
                android:textSize="12sp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <ScrollView
            android:id="@+id/mobilescroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stepperbody"
            android:background="#E7E7E7">

            <stepper.ivb.com.sample.library.components.stepperView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/viewpager">

            </stepper.ivb.com.sample.library.components.stepperView>

        </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_height="48sp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginStart="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/left"
            android:drawableStart="@drawable/left"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:paddingLeft="0sp"
            android:paddingStart="0sp"
            android:text="Back"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16sp"
            android:layout_marginEnd="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/right"
            android:drawableEnd="@drawable/right"
            android:paddingLeft="5sp"
            android:paddingStart="5sp"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="Next"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>